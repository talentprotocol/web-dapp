<div class="col-12 col-lg-9 flex-grow-0 flex-shrink-0 lg-overflow-y-scroll d-flex px-0">
  <main class="col-12 px-2 d-flex flex-column justify-content-start">
    <h1>Admin Area</h1>

    <%= render "shared/flashes" %>

    <table class="table">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Count</th>
          <th scope="col"></th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <th scope="row">Users</th>
          <th scope="row"><%= @user_count %></th>
          <td><%= react_component("Button", props: { type: "primary", href: admin_users_path, text: "Manage"}, prerender: false) %></td>
        </tr>
        <tr>
          <th scope="row">Invites</th>
          <th scope="row"> - </th>
          <td><%= react_component("Button", props: { type: "primary", href: admin_invites_path, text: "Manage"}, prerender: false) %></td>
        </tr>
      </tbody>
    </table>
  </main>
</div>
