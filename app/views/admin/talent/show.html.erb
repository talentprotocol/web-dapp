<div class="col-12 col-lg-9 flex-grow-0 flex-shrink-0 lg-overflow-y-scroll d-flex px-0">
  <main class="col-12 px-2 d-flex flex-column justify-content-start">
    <h1>Talent</h1>

    <dl class="d-flex flex-row flex-wrap">
      <dt class="col-md-3 sm-text-left md-text-right">ID</dt>
      <dd class="col-md-9"><%= @talent.id %></dd>

      <% if @talent.profile_picture.present? %>
        <dt class="col-md-3 sm-text-left md-text-right">Profile picture</dt>
        <dd class="col-md-9"><%= image_tag @talent.profile_picture_url %></dd>
      <% end %>

      <dt class="col-md-3 sm-text-left md-text-right">ITO Date</dt>
      <dd class="col-md-9"><%= @talent.ito_date %></dd>

      <dt class="col-md-3 sm-text-left md-text-right">Wallet ID</dt>
      <dd class="col-md-9"><%= @talent.wallet_id %></dd>

      <dt class="col-md-3 sm-text-left md-text-right">Description</dt>
      <dd class="col-md-9"><%= @talent.description %></dd>

      <dt class="col-md-3 sm-text-left md-text-right">Public Key</dt>
      <dd class="col-md-9"><%= @talent.public_key || "-" %></dd>

      <dt class="col-md-3 sm-text-left md-text-right">Sponsors</dt>
      <dd class="col-md-9"><%= @talent.investors.count %></dd>

      <dt class="col-md-3 sm-text-left md-text-right">Activity</dt>
      <dd class="col-md-9"><%= @talent.activity_count %></dd>

      <dt class="col-md-3 sm-text-left md-text-right">Created at</dt>
      <dd class="col-md-9"><%= l(@talent.created_at, format: :long) %></dd>

      <dt class="col-md-3 sm-text-left md-text-right">Updated at</dt>
      <dd class="col-md-9"><%= l(@talent.updated_at, format: :long) %></dd>

      <div class="col-md-9 offset-md-3">
        <%= link_to "Edit Talent", edit_admin_talent_path(@talent), class: "btn btn-primary talent-button" %>
        <%= link_to "Destroy Talent", admin_talent_path(@talent), class: "btn btn-danger talent-button", method: :delete %>
      </div>

      <% if @talent.token.present? %>
        <hr class="col-md-12">

        <dt class="col-md-3 sm-text-left md-text-right">Ticker</dt>
        <dd class="col-md-9"><%= @talent.token.display_ticker %></dd>

        <dt class="col-md-3 sm-text-left md-text-right">Token Price</dt>
        <dd class="col-md-9"><%= @talent.token.display_price %></dd>

        <dt class="col-md-3 sm-text-left md-text-right">Token Market Cap</dt>
        <dd class="col-md-9"><%= @talent.token.display_market_cap %></dd>

        <div class="offset-md-3 col-md-9">
          <%= link_to "Edit Token", edit_admin_talent_token_path(@talent, @talent.token), class: "btn btn-primary talent-button" %>
        </div>
      <% end %>

      <% if @talent.career_goal.present? %>
        <hr class="col-md-12">
        <dt class="col-md-3 sm-text-left md-text-right">Career Goal</dt>
        <dd class="col-md-9"><%= @talent.career_goal %></dd>

        <div class="offset-md-3 col-md-9">
          <%= link_to "Edit Career Goal", edit_admin_talent_career_goal_path(@talent, @talent.career_goal), class: "btn btn-primary talent-button" %>
        </div>
      <% end %>

      <% if @talent.rewards.count > 0%>
        <hr class="col-md-12">

        <dt class="col-md-3 sm-text-left md-text-right">Rewards</dt>
        <dd class="col-md-9">
          <%= @talent.rewards.map(&:to_s).join(" | ") %>
        </dd>

        <div class="offset-md-3 col-md-9">
          <%= link_to "Edit Rewards", admin_talent_rewards_path(@talent), class: "btn btn-primary talent-button" %>
        </div>
      <% end %>
    </dl>
  </div>
</div>
