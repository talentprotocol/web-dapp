<%= form_with model: [:admin, talent], local: true do |form |%>
  <%= render "shared/form_errors", resource: talent%>

  <div class="form-group">
    <%= form.label :user_id %>
    <%= form.text_field :user_id, required: true, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :public_key %>
    <%= form.text_field :public_key, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :ito_date %>
    <%= form.datetime_local_field :ito_date, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_area :description, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.hidden_field :profile_picture, value: talent.cached_profile_picture_data %>
    <%= form.file_field :profile_picture %>
  </div>

  <div class="form-actions">
    <%= link_to "Cancel", talent.persisted? && admin_users_path(talent.user_id) || admin_users_path, class: "btn btn-secondary talent-button", role: "button"%>
    <%= form.submit "Save Talent", class: "btn btn-primary talent-button" %>
  </div>
<% end %>
