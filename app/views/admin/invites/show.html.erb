<div class="col-12 col-lg-9 flex-grow-0 flex-shrink-0 lg-overflow-y-scroll d-flex px-0 border-left">
  <main class="col-12 px-2 d-flex flex-column justify-content-start">
    <h1>Invites</h1>

    <%= render "shared/flashes" %>

    <dl class="d-flex flex-row flex-wrap">
      <dt class="col-md-3 sm-text-left md-text-right">ID</dt>
      <dd class="col-md-9"><%= @invite.id %></dd>

      <dt class="col-md-3 sm-text-left md-text-right">Code</dt>
      <dd class="col-md-9"><%= @invite.code %></dd>

      <dt class="col-md-3 sm-text-left md-text-right">Uses</dt>
      <dd class="col-md-9"><%= @invite.uses %></dd>

      <dt class="col-md-3 sm-text-left md-text-right">Max Uses</dt>
      <% if @invite.max_uses.nil? %>
        <dd class="col-md-9">âˆž</dd>
      <% else %>
        <dd class="col-md-9"><%= @invite.max_uses %></dd>
      <% end %>

      <dt class="col-md-3 sm-text-left md-text-right">Talent Invite</dt>
      <dd class="col-md-9"><%= @invite.talent_invite %></dd>

      <dt class="col-md-3 sm-text-left md-text-right">User</dt>
      <dd class="col-md-9"><%= @invite.user.username %></dd>

      <dt class="col-md-3 sm-text-left md-text-right">Created at</dt>
      <dd class="col-md-9"><%= l(@invite.created_at, format: :long) %></dd>

      <dt class="col-md-3 sm-text-left md-text-right">Updated at</dt>
      <dd class="col-md-9"><%= l(@invite.updated_at, format: :long) %></dd>
    </dl>

    <div class="d-flex flex-row">
      <div class="col-md-9 offset-md-3">
        <%= link_to "Edit Invite", edit_admin_invite_path(@invite), class: "btn btn-primary talent-button" %>
        <%= link_to "Destroy Invite", admin_invite_path(@invite), class: "btn btn-danger talent-button", method: :delete %>
      </div>
    </div>
  </main>
</div>
